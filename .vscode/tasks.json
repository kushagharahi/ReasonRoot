{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "args": [
                "--target",
                "ES6",
                "--outDir",
                "js",
                "--sourceMap",
                "--watch"
            ],
            "type": "shell",
            "isBackground": true,
            "problemMatcher": "$tsc"
        },
        {
            "label": "start",
            "type": "npm",
            "script": "start",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}